@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Eliminar movimiento";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-3">Eliminar movimiento</h2>
    <p class="lead">¿Estás seguro que deseas eliminar este movimiento?</p>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tipo</dt>
                <dd class="col-sm-9">@(Model.Tipo == 1 ? "Crédito" : "Débito")</dd>

                <dt class="col-sm-3 fw-bold">Concepto</dt>
                <dd class="col-sm-9">@Model.Concepto</dd>

                <dt class="col-sm-3 fw-bold">Monto</dt>
                <dd class="col-sm-9 fw-bold">@Model.Monto.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Fecha</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-bold">Cuenta</dt>
                <dd class="col-sm-9">@Model.IdCuenta</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger bg-opacity-25 fw-bold">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary bg-opacity-25 fw-bold ms-2">Cancelar</a>
    </form>
</div>