@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Editar movimiento";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">Editar movimiento</h2>

    <form asp-action="Edit" class="mt-2">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="Tipo" class="form-label fw-bold">Tipo</label>
                <select asp-for="Tipo" class="form-select">
                    <option value="1">Crédito</option>
                    <option value="2">Débito</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="Concepto" class="form-label fw-bold">Concepto</label>
                <input asp-for="Concepto" class="form-control" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Monto" class="form-label fw-bold">Monto</label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="IdCuenta" class="form-label fw-bold">Cuenta</label>
                <input asp-for="IdCuenta" class="form-control" />
                <span asp-validation-for="IdCuenta" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary bg-opacity-25 fw-bold">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary bg-opacity-25 fw-bold ms-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
