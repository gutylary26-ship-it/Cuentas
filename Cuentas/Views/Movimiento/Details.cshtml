@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Detalles del movimiento";
}

<div class="container mt-4">
    <h2 class="fw-bold text-info mb-3">Detalles del movimiento</h2>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tipo</dt>
                <dd class="col-sm-9">
                    @(Model.Tipo == 1 ? "Crédito" : "Débito")
                </dd>

                <dt class="col-sm-3 fw-bold">Concepto</dt>
                <dd class="col-sm-9">@Model.Concepto</dd>

                <dt class="col-sm-3 fw-bold">Monto</dt>
                <dd class="col-sm-9 fw-bold">@Model.Monto.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Fecha</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-bold">Cuenta</dt>
                <dd class="col-sm-9">@Model.IdCuenta</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" 
           class="btn btn-primary bg-opacity-25 fw-bold me-2">Editar</a>
        <a asp-action="Index" 
           class="btn btn-secondary bg-opacity-25 fw-bold">Volver</a>
    </div>
</div>
