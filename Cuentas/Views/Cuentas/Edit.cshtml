@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Editar cuenta";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info bg-opacity-25 fw-bold">
            Editar cuenta
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="numero" class="form-label fw-bold"></label>
                    <input asp-for="numero" class="form-control" />
                    <span asp-validation-for="numero" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="descripcion" class="form-label fw-bold"></label>
                    <input asp-for="descripcion" class="form-control" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="creditos" class="form-label fw-bold"></label>
                        <input asp-for="creditos" class="form-control" />
                        <span asp-validation-for="creditos" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="debitos" class="form-label fw-bold"></label>
                        <input asp-for="debitos" class="form-control" />
                        <span asp-validation-for="debitos" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="balance" class="form-label fw-bold"></label>
                        <input asp-for="balance" class="form-control" />
                        <span asp-validation-for="balance" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}