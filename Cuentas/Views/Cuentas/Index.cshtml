@model IEnumerable<Cuentas.Models.Cuenta>

@{
    ViewData["Title"] = "Index";
}

<div class="bg-info bg-opacity-25 mb-4 rounded shadow-sm">
    <h1 class="display-4 fw-bold">Index</h1>
    <p class="fw-bold lead">Listado de cuentas registradas</p>
</div>

<p>
    <a asp-action="Create" class="btn btn-info bg-opacity-25 fw-bold">Create New</a>
</p>

<table class="table table-bordered table-hover text-center">
    <thead class="table-info">
        <tr>
            <th class="fw-bold text-center"> @Html.DisplayNameFor(model => model.numero) </th>
            <th class="fw-bold text-center"> @Html.DisplayNameFor(model => model.descripcion) </th>
            <th class="fw-bold text-center"> @Html.DisplayNameFor(model => model.creditos) </th>
            <th class="fw-bold text-center"> @Html.DisplayNameFor(model => model.debitos) </th>
            <th class="fw-bold text-center"> @Html.DisplayNameFor(model => model.balance) </th>
            <th class="fw-bold text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.numero) </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.descripcion) </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.creditos) </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.debitos) </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.balance) </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success fw-bold">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info fw-bold">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger fw-bold">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
