@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Detalles de la cuenta";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info bg-opacity-25 fw-bold">
            Detalles de la cuenta
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Número</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.numero)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.descripcion)</dd>

                <dt class="col-sm-3">Créditos</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.creditos)</dd>

                <dt class="col-sm-3">Débitos</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.debitos)</dd>

                <dt class="col-sm-3">Balance</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.balance)</dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
            </div>
        </div>
    </div>
</div>